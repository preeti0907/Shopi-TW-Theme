<div class="h-full p-6 bg-white border border-gray-100 rounded-lg hover:border-gray-300 transition-all duration-300 transform hover:-translate-y-1">
  <div class="flex flex-col h-full">
    <div class="mb-4">
      <svg class="w-10 h-10 text-indigo-500" fill="currentColor" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
        <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
      </svg>
    </div>
    
    <div class="flex-grow">
      {% if block.settings.content %}
        <p class="text-gray-700 text-lg font-light mb-6 leading-relaxed">{{ block.settings.content }}</p>
      {% endif %}
    </div>
    
    <div class="mt-auto flex items-center">
      {% if block.settings.image %}
        <div class="w-10 h-10 overflow-hidden rounded-full mr-3">
          {{ 
            block.settings.image 
            | image_url: width: 80 
            | image_tag:
              loading: 'lazy',
              class: 'w-full h-full object-cover',
              widths: '40, 80',
              sizes: '(max-width: 768px) 40px, 80px'
          }}
        </div>
      {% endif %}
      
      <div>
        {% if block.settings.author %}
          <h3 class="text-base font-medium text-gray-900">{{ block.settings.author }}</h3>
        {% endif %}
        
        {% if block.settings.author_info %}
          <p class="text-xs text-gray-500">{{ block.settings.author_info }}</p>
        {% endif %}
      </div>
      
      <div class="ml-auto">
        {% assign rating = block.settings.rating | default: 5 %}
        {% if rating > 0 %}
          <div class="flex items-center">
            <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-700">{{ rating }}</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>