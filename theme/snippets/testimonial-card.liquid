<div class="h-full rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
  <div class="bg-gradient-to-r from-indigo-500 to-blue-600 p-4">
    <div class="flex justify-center">
      {% assign rating = block.settings.rating | default: 5 %}
      {% for i in (1..5) %}
        {% if i <= rating %}
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
        {% else %}
          <svg class="w-5 h-5 text-white opacity-30" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  
  <div class="p-6 bg-white">
    <div class="relative mb-6">
      <div class="relative z-10">
        {% if block.settings.content %}
          <p class="text-gray-700 italic text-center">{{ block.settings.content }}</p>
        {% endif %}
      </div>
      <svg class="absolute top-0 left-0 w-12 h-12 text-gray-100 -ml-4 -mt-4 z-0" fill="currentColor" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
        <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
      </svg>
    </div>
    
    <div class="flex items-center mt-6 pt-6 border-t border-gray-200">
      {% if block.settings.image %}
        <div class="w-12 h-12 overflow-hidden rounded-full mr-4">
          {{ 
            block.settings.image 
            | image_url: width: 100
            | image_tag:
              loading: 'lazy',
              class: 'w-full h-full object-cover',
              widths: '50, 100',
              sizes: '(max-width: 768px) 50px, 100px' 
          }}
        </div>
      {% else %}
        <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
          </svg>
        </div>
      {% endif %}
      
      <div>
        {% if block.settings.author %}
          <h3 class="text-lg font-semibold">{{ block.settings.author }}</h3>
        {% endif %}
        
        {% if block.settings.author_info %}
          <p class="text-sm text-gray-600">{{ block.settings.author_info }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>