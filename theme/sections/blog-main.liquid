{% schema %}
    {
      "name": "Main Blog Section",
      "tag": "section",
      "class": "bg-white",
      "settings": []
    }
    {% endschema %}
    
    <section class="py-12 px-4 max-w-7xl mx-auto">
      <h1 class="text-4xl font-bold mb-8">{{ blog.title }}</h1>
    
      {% if blog.articles_count == 0 %}
        <p class="text-gray-500">No articles found in this blog.</p>
      {% else %}
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {% for article in blog.articles %}
            <a href="{{ article.url }}" class="block p-4 border rounded hover:shadow transition">
              <h2 class="text-xl font-semibold mb-2">{{ article.title }}</h2>
              <p class="text-sm text-gray-500 mb-2">
                {{ article.published_at | date: "%B %d, %Y" }} â€” {{ article.author }}
              </p>
              <div class="text-gray-700 line-clamp-3">
                {{ article.excerpt | strip_html }}
              </div>
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </section>
    