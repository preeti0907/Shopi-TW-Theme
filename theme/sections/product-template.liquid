{% comment %}
  Enhanced Product Template
  Features:
  - Responsive product gallery
  - Product information
  - Variant selector
  - Add to cart functionality
  - Accordioned content (description, additional info, reviews)
  - Mobile-friendly with Tailwind CSS
  - Properly disabled as a section on non-product pages
{% endcomment %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="product-template"
  data-product-id="{{ product.id }}"
  class="product-template md:mt-8 mb-5 md:mb-12"
>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
      <!-- One 1 (Carousel/Swiper) -->
      <div class=" order-1 md:col-span-2 ">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
          {% for image in product.images %}
            <div class="swiper-slide bg-white flex items-center justify-center bg-center bg-cover rounded overflow-hidden border-gray-100 ">
              <img
                src="{{ image.src | img_url: 'master' }}"
                alt="{{ image.alt | escape }}"
                class="block w-full h-full object-cover"
                height=""
                width=""
              >
            </div>
          {% else %}
            {% for i in (1..5) %}
              <div class="swiper-slide bg-white flex items-center justify-center bg-center bg-cover ">
                {% capture current %}{% cycle "men", "women", "accessories", "new", "collections" %}{% endcapture %}
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
      </div>

      <!-- Two 2 (Sticky content) -->
      <div class="order-2  md:row-span-2 md:sticky md:top-0 md:self-start bg-white min-h-screen">
        <div class="product-details p-4 h-full">
          <!-- Vendor -->
          {% if section.settings.show_vendor and product.vendor %}
            <div class="product-vendor text-sm text-gray-500 uppercase tracking-wider mb-2">
              {{ product.vendor }}
            </div>
          {% endif %}

          <!-- Title -->
          <h1 class="text-3xl font-medium mb-4">{{ product.title }}</h1>

          <!-- Price -->
          {% comment %}
            <div class="product-price mb-6">
              <span class="text-xl font-medium {% if product.compare_at_price > product.price %}text-red-600{% endif %}">
                {{ product.price | money }}
              </span>

              {% if product.compare_at_price > product.price %}
                <span class="ml-2 text-gray-500 line-through">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
            </div>
          {% endcomment %}

          <!-- Short Description -->
          {% if product.description != blank and section.settings.show_short_description %}
            <div class="product-short-description mb-6 text-gray-600">
              <p>{{ product.description | strip_html | truncatewords: section.settings.short_description_words }}</p>
            </div>
          {% endif %}

          <span>
            {% if product.metafields.custom.accessory_product %}
              {% assign accessories = product.metafields.custom.accessory_product.value %}
              {% assign accessory_count = 0 %}
              {% for accessory in accessories %}
                {% assign accessory_count = accessory_count | plus: 1 %}
              {% endfor %}

              <!-- This is the main button that should be visible -->
              <button
                class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 rounded text-gray-800 transition-colors"
                type="button"
                data-action="show-installation"
                data-popup-target="{{ product.id }}"
              >
                See Accessories ({{ accessory_count }})
              </button>
            {% endif %}
          </span>
          {% comment %} Custom variant {% endcomment %}
          {% if product.metafields.custom.combo_offers.value != blank %}
            <h5 class="text-lg font-medium text-gray-900 mb-4">Also Available in:</h5>
            {% assign offer = product.metafields.custom.combo_offers.value %}
{% comment %} 
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-1 md:gap-2">
              <!-- Current product -->
              <div class="flex flex-col border border-blue-800 overflow-hidden rounded bg-blue-100">
                <div class="flex items-center justify-center aspect-square bg-white">
                  <img
                    src="{{ product.featured_image | img_url: '150x150', crop: 'center' }}"
                    alt="{{ product.title }}"
                    class="h-full w-full aspect-square object-contain"
                    height="100"
                    width="100"
                  >
                </div>
                <div class="border-t border-blue-800 p-1 text-left">
                  <div class="font-medium text-xs">{{ product.title }}</div>
                  <div class="text-sm">{{ product.price | money }}</div>
                </div>
              </div>

              <!-- Other products from metafields -->
              {% assign letter_index = 0 %}

              {% for spec in offer %}
                <div class="flex flex-col border border-gray-300 overflow-hidden rounded bg-white">
                  <a href="{{ spec.product.value.url }}" class="block">
                    <div class="flex items-center justify-center aspect-square bg-white">
                      {% if spec.product.value.featured_image %}
                        <img
                          src="{{ spec.product.value.featured_image | img_url: '150x150', crop: 'center' }}"
                          alt="{{ spec.product_name }}"
                          class="h-full w-full aspect-square object-contain"
                          height="100"
                          width="100"
                        >
                      {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                          <span class="text-gray-400">No image</span>
                        </div>
                      {% endif %}
                    </div>
                    <div class="border-t border-gray-300 p-1 text-left">
                      <div class="font-medium text-xs">{{ spec.product_name }}</div>
                      <div class="text-sm">{{ spec.product.value.price | money }}</div>
                    </div>
                  </a>
                </div>
                {% assign letter_index = letter_index | plus: 1 %}
              {% endfor %}
            </div> {% endcomment %}
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-1 md:gap-2">
              <!-- Current product (highlighted with subtle color) -->
              <div class="flex flex-col border border-indigo-400 overflow-hidden bg-gray-50 shadow-sm relative rounded overflow-hidden">
                <!-- Subtle color indicator -->
                <div class="flex items-center justify-center aspect-square bg-white relative z-10">
                  <img
                    src="{{ product.featured_image | img_url: '150x150', crop: 'center' }}"
                    alt="{{ product.title }}"
                    class="h-full w-full aspect-square object-contain"
                    height="100"
                    width="100"
                  >
                </div>
                <div class="border-t border-gray-400 p-1.5 text-left relative z-10">
                  <div class="font-medium text-xs">{{ product.title }}</div>
                  <div class="text-sm">{{ product.price | money }}</div>
                </div>
              </div>

              <!-- Other products from metafields -->
              {% assign letter_index = 0 %}

              {% for spec in offer %}
                <a
                  href="{{ spec.product.value.url }}"
                  class="flex flex-col border border-gray-200 overflow-hidden bg-white hover:border-gray-400 hover:shadow-md transition-all duration-300 transform hover:scale-105 hover:z-10"
                >
                  <div class="flex items-center justify-center aspect-square bg-white">
                    {% if spec.product.value.featured_image %}
                      <img
                        src="{{ spec.product.value.featured_image | img_url: '150x150', crop: 'center' }}"
                        alt="{{ spec.product_name }}"
                        class="h-full w-full aspect-square object-contain"
                        height="100"
                        width="100"
                      >
                    {% else %}
                      <div class="w-full h-full flex items-center justify-center">
                        <span class="text-gray-400">No image</span>
                      </div>
                    {% endif %}
                  </div>
                  <div class="border-t border-gray-200 p-1.5 text-left">
                    <div class="font-medium text-xs">{{ spec.product_name }}</div>
                    <div class="text-sm">{{ spec.product.value.price | money }}</div>
                  </div>
                </a>
                {% assign letter_index = letter_index | plus: 1 %}
              {% endfor %}
            </div>

            <style>
              /* This ensures smooth transitions for transforms */
              .transform {
                will-change: transform;
              }
            </style>
          {% endif %}
          <!-- CUSTOM VARIANT SECTION CLOSED -->

          <!-- Product Form -->
          <form
            method="post"
            action="/cart/add"
            id="product-form"
            class="mt-5"
          >
            <input type="hidden" name="id" id="product-variant-id" value="{{ product.variants.first.id }}">

            {% if product.has_only_default_variant == false %}
              {% for option in product.options_with_values %}
                <div class="mb-4">
                  <span class="block text-sm font-medium text-gray-700 mb-3">{{ option.name }}</span>
                  <div class="flex flex-wrap gap-2" data-option-index="{{ forloop.index0 }}">
                    {% for value in option.values %}
                      <button
                        type="button"
                        class="option-button px-4 py-2 border border-gray-300 rounded-md text-sm font-medium bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-150"
                        data-value="{{ value }}"
                        data-option-position="{{ forloop.index0 }}"
                      >
                        {{ value }}
                      </button>
                    {% endfor %}
                  </div>
                  <select class="hidden" name="options[{{ option.name }}]" data-option-select="{{ forloop.index0 }}">
                    {% for value in option.values %}
                      <option value="{{ value }}">{{ value }}</option>
                    {% endfor %}
                  </select>
                </div>
              {% endfor %}
            {% endif %}

            <!-- Price display -->
            {% render 'product-price',
              price: product.selected_or_first_available_variant.price,
              compare_at_price: product.selected_or_first_available_variant.compare_at_price
            %}

            <!-- Quantity Selector -->
            <div class="mb-6">
              <label for="quantity" class="block text-sm font-medium text-gray-800 mb-1">Quantity</label>
              <div class="flex items-center border border-gray-300 rounded-md overflow-hidden w-max">
                <button
                  type="button"
                  id="quantity-decrease"
                  class="flex-shrink-0 px-3 py-1 bg-white text-gray-600 hover:bg-gray-100 focus:outline-none transition duration-150"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                  </svg>
                </button>

                <input
                  type="number"
                  id="quantity"
                  name="quantity"
                  value="1"
                  min="1"
                  class="w-12 text-center py-1 border-x border-gray-200 text-sm focus:outline-none"
                >

                <button
                  type="button"
                  id="quantity-increase"
                  class="flex-shrink-0 px-3 py-1 bg-white text-gray-600 hover:bg-gray-100 focus:outline-none transition duration-150"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                </button>
              </div>
            </div>

            <div id="add-to-cart-wrapper">
              <!-- Add to Cart button - shown when product is available -->
              <button
                type="submit"
                id="add-to-cart-btn"
                class="w-full bg-indigo-600 text-white py-3 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-all duration-150 ease-in-out font-medium mb-3"
              >
                Add to Cart
              </button>

              <!-- Express Checkout button - shown when product is available -->
              <button
                type="button"
                id="express-checkout-btn"
                class="w-full bg-white border border-gray-300 text-gray-700 py-3 px-4 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all duration-150 ease-in-out font-medium"
              >
                Express Checkout
              </button>
            </div>

            <!-- Sold Out button - shown when product is unavailable -->
            <button
              type="button"
              id="sold-out-btn"
              class="hidden w-full bg-gray-400 text-white py-3 px-4 rounded-md transition-all duration-150 ease-in-out font-medium cursor-not-allowed"
              disabled
            >
              Sold Out
            </button>
          </form>

          <!-- Additional Product Meta -->
          <div class="product-meta mt-6 pt-6 border-t border-gray-200">
            <!-- SKU -->
            {% if product.selected_or_first_available_variant.sku != blank and section.settings.show_sku %}
              <div class="product-sku mb-2 text-sm">
                <span class="font-medium">SKU:</span>
                <span id="variant-sku">{{ product.selected_or_first_available_variant.sku }}</span>
              </div>
            {% endif %}

            <!-- Product Type -->
            {% if product.type != blank and section.settings.show_product_type %}
              <div class="product-type mb-2 text-sm"><span class="font-medium">Type:</span> {{ product.type }}</div>
            {% endif %}

            <!-- Collections -->
            {% if product.collections.size > 0 and section.settings.show_collections %}
              <div class="product-collections mb-2 text-sm">
                <span class="font-medium">Collections:</span>
                {% for collection in product.collections %}
                  <a href="{{ collection.url }}" class="text-gray-600 hover:text-black transition">
                    {{- collection.title -}}
                  </a>
                  {%- unless forloop.last %}, {% endunless %}
                {% endfor %}
              </div>
            {% endif %}

            <!-- Tags -->
            {% if product.tags.size > 0 and section.settings.show_tags %}
              <div class="product-tags mb-2 text-sm">
                <span class="font-medium">Tags:</span>
                {% for tag in product.tags %}
                  <span class="text-gray-600">{{ tag }}</span>
                  {%- unless forloop.last %}, {% endunless %}
                {% endfor %}
              </div>
            {% endif %}

            <!-- Share -->
            {% render 'product-share' %}
          </div>
        </div>
      </div>

      <!-- Three 3 (Long content) -->
      <div class="order-3 md:col-span-2">
        <div class="p-4">
          {% for block in section.blocks %}
            {% if block.type == 'accordion' %}
              <div class="border-b border-gray-100">
                <button
                  onclick="toggleAccordion({{forloop.index}})"
                  class="w-full flex justify-between items-center py-4 text-gray-700 hover:text-black transition-colors duration-200"
                  {{ block.shopify_attributes }}
                >
                  <span class="font-medium"> {{ block.settings.title }}</span>
                  <span
                    id="icon-{{forloop.index}}"
                    class="transition-transform duration-200 {% if forloop.first %}rotate-180{% endif %}"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-3 h-3">
                      <path d="M8 12 2 6h12l-6 6z" />
                    </svg>
                  </span>
                </button>
                <div
                  id="content-{{forloop.index}}"
                  class="overflow-hidden transition-all duration-200 ease-in-out {% unless forloop.first %}max-h-0{% endunless %}"
                >
                  <div class="pb-4 text-sm text-gray-500 space-y-2">
                    {% case block.settings.content_type %}
                      {% when 'description' %}
                        {{ product.description }}

                      {% when 'specifications' %}
                        {% if block.settings.specifications != blank %}
                          {{ block.settings.specifications }}
                        {% else %}
                          <p>No specifications available.</p>
                        {% endif %}

                      {% when 'reviews' %}
                        <div class="product-reviews">
                          {% if block.settings.enable_product_reviews %}
                            <div id="shopify-product-reviews" data-id="{{ product.id }}">
                              {{ product.metafields.spr.reviews }}
                            </div>
                          {% else %}
                            <div class="flex flex-col items-center py-6">
                              <p class="text-gray-400 mb-3">No reviews yet</p>
                              <button class="write-review-button px-4 py-1.5 border border-gray-200 hover:border-gray-300 rounded transition">
                                Write a review
                              </button>
                            </div>

                            <div class="write-review-form hidden mt-4 space-y-4">
                              <h3 class="text-sm font-medium">Write a Review</h3>
                              <form id="review-form" class="space-y-3">
                                <div>
                                  <label for="review-name" class="block text-xs mb-1">Name</label>
                                  <input
                                    type="text"
                                    id="review-name"
                                    class="w-full px-3 py-1.5 border border-gray-200 rounded"
                                  >
                                </div>
                                <div>
                                  <label for="review-email" class="block text-xs mb-1">Email</label>
                                  <input
                                    type="email"
                                    id="review-email"
                                    class="w-full px-3 py-1.5 border border-gray-200 rounded"
                                  >
                                </div>
                                <div>
                                  <label for="review-rating" class="block text-xs mb-1">Rating</label>
                                  <div class="flex">
                                    {% for i in (1..5) %}
                                      <button
                                        type="button"
                                        class="star-rating-button text-gray-200 hover:text-yellow-400"
                                        data-rating="{{ i }}"
                                      >
                                        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                          <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                                        </svg>
                                      </button>
                                    {% endfor %}
                                    <input type="hidden" id="review-rating-value" value="0">
                                  </div>
                                </div>
                                <div>
                                  <label for="review-title" class="block text-xs mb-1">Review Title</label>
                                  <input
                                    type="text"
                                    id="review-title"
                                    class="w-full px-3 py-1.5 border border-gray-200 rounded"
                                  >
                                </div>
                                <div>
                                  <label for="review-body" class="block text-xs mb-1">Review</label>
                                  <textarea
                                    id="review-body"
                                    rows="3"
                                    class="w-full px-3 py-1.5 border border-gray-200 rounded"
                                  ></textarea>
                                </div>
                                <div>
                                  <button
                                    type="submit"
                                    class="px-4 py-1.5 bg-black text-white rounded hover:bg-gray-800 transition"
                                  >
                                    Submit
                                  </button>
                                </div>
                              </form>
                            </div>
                          {% endif %}
                        </div>

                      {% when 'custom' %}
                        {{ block.settings.custom_content }}
                    {% endcase %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product information",
  "disabled_on": {
    "groups": ["header", "footer"],
    "templates": ["index", "collection", "blog", "article", "page", "cart", "list-collections", "search", "404"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Product information"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_short_description",
      "label": "Show short description",
      "default": true
    },
    {
      "type": "range",
      "id": "short_description_words",
      "min": 10,
      "max": 50,
      "step": 5,
      "label": "Short description word count",
      "default": 30
    },
    {
      "type": "header",
      "content": "Variant options"
    },
    {
      "type": "checkbox",
      "id": "show_variant_labels",
      "label": "Show variant labels",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quantity_selector",
      "label": "Show quantity selector",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_dynamic_checkout",
      "label": "Show dynamic checkout button",
      "default": true,
      "info": "Each customer will see their preferred payment method from those available on your store."
    },
    {
      "type": "header",
      "content": "Product details"
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_type",
      "label": "Show product type",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collections",
      "label": "Show collections",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tags",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show social sharing buttons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "accordion",
      "name": "Accordion",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Accordion title",
          "default": "Description"
        },
        {
          "type": "select",
          "id": "content_type",
          "label": "Content type",
          "options": [
            {
              "value": "description",
              "label": "Product description"
            },
            {
              "value": "specifications",
              "label": "Specifications"
            },
            {
              "value": "reviews",
              "label": "Reviews"
            },
            {
              "value": "custom",
              "label": "Custom content"
            }
          ],
          "default": "description"
        },
        {
          "type": "richtext",
          "id": "specifications",
          "label": "Specifications",
          "info": "Only used if content type is set to 'Specifications'",
          "default": "<p>No specifications available for this product.</p>"
        },
        {
          "type": "checkbox",
          "id": "enable_product_reviews",
          "label": "Enable Shopify product reviews",
          "info": "You need to install the Shopify Product Reviews app",
          "default": false
        },
        {
          "type": "richtext",
          "id": "custom_content",
          "label": "Custom content",
          "info": "Only used if content type is set to 'Custom content'"
        }
      ]
    },
    {
      "type": "attached_product",
      "name": "Attached Products"
    }
  ],
  "presets": [
    {
      "name": "Product information",
      "category": "Product",
      "blocks": [
        {
          "type": "accordion",
          "settings": {
            "title": "Description",
            "content_type": "description"
          }
        },
        {
          "type": "accordion",
          "settings": {
            "title": "Specifications",
            "content_type": "specifications"
          }
        },
        {
          "type": "accordion",
          "settings": {
            "title": "Reviews",
            "content_type": "reviews"
          }
        }
      ]
    }
  ]
}
{% endschema %}
