{% schema %}
    {
      "name": "Customer Registration",
      "tag": "section",
      "class": "bg-white",
      "settings": []
    }
    {% endschema %}
    
    <section class="max-w-md mx-auto px-4 py-12">
      <h1 class="text-3xl font-bold mb-6 text-center">Create an Account</h1>
    
      {% form 'create_customer', class: 'space-y-6' %}
        {% if form.errors %}
          <div class="text-red-600 text-sm">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
    
        <div>
          <label for="first_name" class="block text-sm font-medium text-gray-700">First Name</label>
          <input type="text" name="customer[first_name]" id="first_name" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <div>
          <label for="last_name" class="block text-sm font-medium text-gray-700">Last Name</label>
          <input type="text" name="customer[last_name]" id="last_name" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" name="customer[email]" id="email" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" name="customer[password]" id="password" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <div>
          <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Confirm Password</label>
          <input type="password" name="customer[password_confirmation]" id="password_confirmation" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition">Create Account</button>
      {% endform %}
    </section>
    