{% schema %}
    {
      "name": "Password Reset",
      "tag": "section",
      "class": "bg-white",
      "settings": []
    }
    {% endschema %}
    
    <section class="max-w-md mx-auto px-4 py-12">
      <h1 class="text-3xl font-bold mb-6 text-center">Reset Your Password</h1>
    
      {% form 'reset_customer_password', class: 'space-y-6' %}
        {% if form.errors %}
          <div class="text-red-600 text-sm">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
    
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" name="customer[email]" id="email" required class="mt-1 block w-full border border-gray-300 p-2 rounded">
        </div>
    
        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded hover:bg-blue-700 transition">Send Reset Link</button>
      {% endform %}
    
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-500">Remember your password? <a href="/account/login" class="text-blue-600 hover:text-blue-700">Log in</a></p>
      </div>
    </section>
    