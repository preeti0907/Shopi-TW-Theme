<!-- sections/404.liquid or templates/404.liquid -->
{% schema %}
    {
      "name": "404 Page",
      "tag": "section",
      "class": "relative",
      "settings": []
    }
    {% endschema %}
    
    <section class="min-h-screen flex items-center justify-center bg-white px-6 py-12">
      <div class="text-center max-w-xl">
        <h1 class="text-6xl font-bold text-gray-800 mb-4">404</h1>
        <p class="text-xl text-gray-600 mb-6">Oops! The page you’re looking for doesn’t exist.</p>
        <a href="{{ routes.root_url }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
          Go Home
        </a>
      </div>
    </section>
    