{% schema %}
    {
      "name": "Password Page Content",
      "tag": "section",
      "class": "bg-white",
      "settings": []
    }
    {% endschema %}
    
    <section class="min-h-screen flex flex-col items-center justify-center text-center px-4 py-16 bg-white">
      <h1 class="text-4xl font-bold mb-4">We're Coming Soon</h1>
      <p class="text-gray-600 mb-8 max-w-md">Our store is not live yet. Enter the password below to get early access.</p>
    
      {% form 'storefront_password', class: 'w-full max-w-sm space-y-4' %}
        {% if form.errors %}
          <div class="text-red-600 mb-2">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
    
        <input type="password" name="password" class="w-full border border-gray-300 p-3 rounded" placeholder="Enter password" required>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded">
          Submit
        </button>
      {% endform %}
    
      <p class="text-sm text-gray-400 mt-8">Powered by Shopify</p>
    </section>
    